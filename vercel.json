{
  "version": 2,
  "builds": [
    { "src": "api/**/*.ts", "use": "@vercel/node" },
    { "src": "*.html", "use": "@vercel/static" },
    { "src": "src/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/calc", "dest": "/api/index.ts" },
    { "src": "/api/mongo", "dest": "/api/mongo.ts" },
    { "src": "/api/download", "dest": "/api/routes.ts" },
    { "src": "/src/(.*)", "dest": "/src/$1" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
